<div class="story-container">
  <% if nik.title %>
    <h1><%= nik.title %></h1>
  <% end %>
  <h5 class="story-intro-info">
    <%= render partial: "upvote", locals: { nik: nik } %>
    Story ends on paragraph <%= nik.limit %>
  </h5>
  <p class="story-intro-paragraph"><%= nik.body %></p>
  <%= render 'yak_sibling', nik: nik.left_sibling, point: "left" %>
  <%= render 'yak_sibling', nik: nik.right_sibling, point: "right" %>
</div>
