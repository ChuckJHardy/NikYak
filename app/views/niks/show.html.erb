<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <% @nik.first_branch.each do |nik| %>  
      <div class="story-container">
        <h1><%= nik.title %></h1>
        <h5 class="story-intro-info">Number of votes: <%= nik.votes %> Story ends on paragraph <%= nik.limit %></h5>
        <p class="story-intro-paragraph"><%= nik.body %></p>
      </div>
      <% end %>
    </div>
  </div>  

  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <% if user_signed_in? %>
        <%= form_for(@new_nik) do |f| %>
          <% if @new_nik.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@new_nik.errors.count, "error") %> prohibited this yak from being saved:</h2>

              <ul>
                <% @new_nik.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= f.hidden_field :parent_id %>
          <div class="field">
            <h3>What Now?</h3>
            <%= f.text_area :body, :class => "nik_fields" %>
          </div>
          <%= f.submit :class => "btn-style btn-main" %>
        <% end %>
      <% else %>
        <h3>Sign In/up to Reply</h3>
        <%= link_to 'Sign in', new_user_session_path, :class => "btn-style btn-main" %>
        <%= link_to 'Sign up', new_user_registration_path, :class => "btn-style btn-second" %>
      <% end %>
    </div>
  </div>
</div>

<div class="story-page-footer">
  <div class="container">
  <%= social_share_button_tag(@nik.title, via: 'NikYakApp', url: nik_url(@nik), image: asset_path("icon.png")) %>

  <%= link_to 'See all niks', niks_path, :class => "btn-style btn-second" %>
  </div>
</div>