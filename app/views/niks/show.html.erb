<div class="container content-container">
  <%= render @nik.first_branch %>
  <% if user_signed_in? %>
    <% if user_can_add_yak?(@new_nik.parent) %>
      <%= render 'form_yak', nik: @new_nik %>
    <% else %>
      <%= render 'share_your_yak', yak: @nik %>
    <% end %>
  <% else %>
    <h3>This story isn't finished yet. What now?</h3>
    <%= link_to "Sign in with Facebook", omniauth_url(:facebook), :class => "btn-style btn-main" %>
    <%= link_to "Sign in with Twitter", omniauth_url(:twitter), :class => "btn-style btn-main" %>
  <% end %>
</div>