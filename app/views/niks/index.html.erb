<h1>Listing niks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Limit</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @niks.each do |nik| %>
      <tr>
        <td><%= nik.title %></td>
        <td><%= nik.body %></td>
        <td><%= nik.limit %></td>
        <td><%= nik.user %></td>
        <td><%= link_to 'Show', nik %></td>
        <td><%= link_to 'Edit', edit_nik_path(nik) %></td>
        <td><%= link_to 'Destroy', nik, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Nik', new_nik_path %>
