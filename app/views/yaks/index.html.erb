<h1>Listing yaks</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Nik</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @yaks.each do |yak| %>
      <tr>
        <td><%= yak.body %></td>
        <td><%= yak.nik %></td>
        <td><%= yak.user %></td>
        <td><%= link_to 'Show', yak %></td>
        <td><%= link_to 'Edit', edit_yak_path(yak) %></td>
        <td><%= link_to 'Destroy', yak, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Yak', new_yak_path %>
